{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "strict": false,
        "strictPropertyInitialization": false,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "types": [
            "node",
        ],
        "typeRoots": [
            "./node_modules/@types",
            "/src/@types",
        ],
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "dist/**/*",
    ]
}
